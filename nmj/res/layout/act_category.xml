<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/item_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!--
    <ListView 
        android:id="@+id/category_listview"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_weight="0.8"
        android:divider = "@color/white"
        android:scrollbars="none"
         >
    </ListView>
        -->

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="15dip"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingLeft="28dip" >

            <TextView
                android:id="@+id/category_one1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:clickable="true"
                android:onClick="onClick"
                android:text="上衣"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/category_one2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:clickable="true"
                android:onClick="onClick"
                android:text="裙子"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/category_one3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:clickable="true"
                android:onClick="onClick"
                android:text="裤子"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/category_one4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:clickable="true"
                android:onClick="onClick"
                android:text="鞋子"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/category_one5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:clickable="true"
                android:onClick="onClick"
                android:text="包包"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/category_one6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:clickable="true"
                android:onClick="onClick"
                android:text="配饰"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/category_one7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:clickable="true"
                android:onClick="onClick"
                android:text="美妆"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/category_one8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:clickable="true"
                android:onClick="onClick"
                android:text="团购"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/category_gridview"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2" >
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>