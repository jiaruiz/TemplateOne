<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Widget" parent="android:Widget">
    </style>

    <style name="home_tab_bottom">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tab_textcolor</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/home_btn_bg_s</item>
    </style>
    
        <style name="index_tab_top">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tab_textcolor</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">12sp</item>      
    </style>
    
        <style name="Widget.Spinner">
        <item name="android:background">@drawable/btn_dropdown</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">11dip</item>
    </style>
    
        <style name="horizontal_line">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">1dip</item>
	    <item name="android:background">@android:color/black</item>
	</style>
	
        <style name="text_style_black">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
        <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@drawable/checkbox_selector</item>
		<item name="android:paddingLeft">25dip</item>
		<item name="android:maxHeight">10dip</item>
	</style>
    
</resources>
